pipeline {
    agent any

    stages {
        stage("Notify") {
            steps {
                slackSend channel: 'sv-sub7', message: 'sub7はまもなく再起動します．'
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp '
                sudo wall "sub7はまもなく再起動します．"
                '
                '''
                sleep time: 10, unit: 'SECONDS'
            }
        }
        stage('Shutdown VMs') {
            steps {
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp <<EOF
                virsh shutdown user
                virsh shutdown p4
                while virsh list --state-running | grep -q user; do
                  sleep 1
                done
                while virsh list --state-running | grep -q p4; do
                  sleep 1
                done
                EOF
                '''
            }
        }
        stage('Reboot sub7') {
            steps {
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp '
                sudo reboot
                '
                '''
            }
        }
    }
}

