pipeline {
    agent any

    stages {
        stage('[sub7] Update scripts repository') {
            steps{
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp << EOF
                cd p4-ubpf_scripts
                git pull
EOF
                '''
            }
        }
        stage('[sub7] Start P4 VM') {
            steps {
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp <<EOF
                if virsh domstate p4 | grep -q running; then
                    echo "P4 VM is already running."
                else
                    echo "Starting P4 VM..."
                    virsh start p4
                    for i in {1..30}; do
                        if virsh domstate p4 | grep -q running; then
                            echo "P4 VM is now running."
                            sleep 5
                            break
                        fi
                        sleep 1
                    done
                    if ! virsh domstate p4 | grep -q running; then
                        echo "Error: P4 VM did not start within expected time."
                        exit 1
                    fi
                fi
EOF
                '''
            }
        }
        stage('[p4] Update scripts repository') {
            steps{
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp << EOF
                ssh -o StrictHostKeyChecking=no p4.local ' << InnerEOF
                cd p4-ubpf_scripts
                git pull
InnerEOF
                '
EOF
                '''
            }
        }
        stage('[p4] Update ubpf repository') {
            steps{
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp << EOF
                ssh -o StrictHostKeyChecking=no p4.local ' << InnerEOF
                cd ubpf
                git pull
InnerEOF
                '
EOF
                '''
            }
        }
        stage('[p4] Build P4 & uBPF Runtime') {
            steps{
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp << EOF
                ssh -o StrictHostKeyChecking=no p4.local '
                sudo su << InnerEOF
                cd ubpf
                cmake --build build -v --target install
InnerEOF
                '
EOF
                '''
            }
        }
        stage('[sub7] Update OVS repository') {
            steps{
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp << EOF
                cd ovs
                git pull
EOF
                '''
            }
        }
        stage('[sub7] Build OVS') {
            steps {
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp '
                sudo su <<EOF
                cd ovs
                make clean
                ./boot.sh
                ./configure
                make -j$(nproc) && make install
EOF
                '
                '''
            }
        }
        stage('[sub7] Shutdown P4 VM') {
            steps {
                sh '''
                ssh sub7.ksl.ci.kyutech.ac.jp <<EOF
                virsh shutdown p4
EOF
                '''
                sleep time: 30, unit: 'SECONDS'
            }
        }
        stage('Start P4 Shield') {
            steps {
                build job: 'P4 Shield - sub7/start'
            }
        }
    }
}

